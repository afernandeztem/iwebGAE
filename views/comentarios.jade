extends layout
include ./mixins/comentario
block content
   a(href='/comentarios/add?id='+idSerie, class='btn btn-outline-success', style={margin: '0px 0px 0px 20px'}) AÃ±adir Comentario
   if comentarios.length === 0
    div.alert.alert-danger(role='alert', style={margin: '0px 300px'}) No hay comentarios que mostrar
   else
       each comentario in comentarios
        if comentario.usuario === emailLogged
