extends layout

include ../views/mixins/serie

block content
	form.form-signin.text-center(method='post', action='/series/add')
		h1.h3.mb-3.font-weight-normal Formulario
		div.form-group
			label(for='titulo') Título de la serie:
			input#titulo.form-control(type='text', name='titulo', placeholder='Título', autofocus='autofocus', value=serie.titulo)
		div.form-group
			label(for='categoria') Categoría:
			input#titulo.form-control(type='text', name='categoria', placeholder='Categoría', value=serie.categoria)
		div.form-group
			label(for='descripcion') Descripción:
			textarea#descripcion.form-control(name='descripcion', placeholder='Contenido del comentario', value=serie.descripcion)
		div.form-group
			label(for='imagenSerie') Imagen:
			input#imagenSerie.form-control(type='text', name='imagenSerie',value=imagenSerie, placeholder='URL Imagen')
		input.form-control(type='hidden', name='idSerie', value=id)
		button.btn.btn-lg.btn-primary.btn-block(type='submit') Guardar
